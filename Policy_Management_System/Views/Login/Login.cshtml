@model Policy_Management_System.Models.Login


@{
    ViewBag.Title = "Index";
}

<div class="login-cover">
    <h2 style="text-align:center; color:white; font-size:40px; line-height:90px;">LOGIN</h2>   
</div>


@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <table style="width: 25%; margin: 0px auto; margin-top:30px;">
        <tr>
            <td>
                @Html.TextBoxFor(i => i.Mobile, new { @class = "form-control", required = "required", placeholder = "Enter Mobile Number.", pattern = "^[0-9]*$" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.PasswordFor(i => i.Password, new { @class = "form-control", required = "required", placeholder = "Enter Your Password." })
            </td>
        </tr>
        <tr>
            <td>
                <button class="form-control btn-primary" style="width:280px;">Login</button>
            </td>
        </tr>
        <tr>
            <td style="text-align:justify">@Html.ActionLink("Don't have an account", "Index", "Registration")</td>
        </tr>
    </table>


}


